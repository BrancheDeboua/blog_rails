<header>

  <div class="title">

    <h2><%= article.title %></h2>
    <p>Lorem ipsum dolor amet nullam consequat etiam feugiat</p>
  
  </div>

  <div class="meta">

    <time class="published" datetime="2015-11-01"><%= get_date article.created_at %></time>
    <a href="#" class="author"><span class="name"><%= author.first_name %> <%= author.last_name %></span><img src="images/avatar.jpg" alt="" /></a>

  </div>

</header>

<span class="image featured"><img src="<%= article.image_url %>" alt="" /></span>
<div class="article-text">
  <%= raw article.article_text %>
</div>

<footer>
  <ul class="stats">
    <li><a href="#" class="icon solid fa-heart"><%= article.likes %></a></li>
    <li><a href="#" class="icon solid fa-comment"><%= article.dislikes %></a></li>
  </ul>
</footer>

