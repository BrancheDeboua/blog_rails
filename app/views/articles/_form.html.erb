<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author_id, style: "display: block" %>
    <%= form.hidden_field :author_id, value: current_user.id %>
  </div>

  <div>
    <%= form.label :article_text, style: "display: block" %>
    <%= form.text_area :article_text, style: "min-height: 200px;" %>
  </div>

  <div>
    <%= form.label :image_url, style: "display: block" %>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.hidden_field :likes %>
    <%= form.hidden_field :dislikes %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
